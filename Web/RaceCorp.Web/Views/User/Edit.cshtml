@model RaceCorp.Web.ViewModels.ApplicationUsers.UserEditViewModel;

<div class="col-md-6">
    <form id="editForm" method="post" enctype="multipart/form-data">
        <h2>Edit</h2>
        <hr />
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-floating mb-2">
            <input asp-for="FirstName" class="form-control" autocomplete="firstName" aria-required="true" />
            <label asp-for="FirstName">First name</label>
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-floating mb-2">
            <input asp-for="LastName" class="form-control" autocomplete="lastName" aria-required="true" />
            <label asp-for="LastName">Last name</label>
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>

        <div class="form-floating mb-2">

            <select asp-for="Gender" class="form-select">
                <option selected>@Model.Gender</option>
                <option value="1">Male</option>
                <option value="2">Female</option>
            </select>
            <label asp-for="LastName">Gender</label>

        </div>
        <div class="form-floating mb-2">
            <input asp-for="Town" class="form-control" autocomplete="townName" aria-required="true" />
            <label asp-for="Town">Town name</label>
            <span asp-validation-for="Town" class="text-danger"></span>
        </div>
        <div class="form-floating mb-2">
            <input asp-for="Country" class="form-control" autocomplete="countryName" aria-required="true" />
            <label asp-for="Country">Country name</label>
            <span asp-validation-for="Country" class="text-danger"></span>
        </div>
        <div class="form-group mb-1">
            <label asp-for="UserProfilePicture">Upload profile picture</label>
            <input asp-for="UserProfilePicture" name="UserProfilePicture" class="form-control mb-1" style="width: 100%;" />
        </div>

        <button id="editButton" type="submit" class="w-100 btn btn-lg btn-primary mb-2">Edit</button>

    </form>
</div>