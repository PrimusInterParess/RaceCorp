@model RaceCorp.Web.ViewModels.DifficultyViewModels.RaceDifficultyProfileViewModel

@{
    this.ViewData["Title"] = "Trace Profile";
}

<article class="form-group text-center">
    <header>
        <h1>@Model.Name</h1>
    </header>


    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <iframe src="@Model.TrackUrl" width="500" height="500" frameborder="1"></iframe>
            </div>
            <div class="card offset-md-2 col-md-3">
                <img class="card-img-top mt-1" src="@Model.LogoPath" alt="Card image cap">
                <div class="card-header">
                     
                    Overview
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">Difficulty: @Model.Difficulty</li>
                    <li class="list-group-item">Length: @Model.Length</li>
                    <li class="list-group-item">Control time: @Model.ControlTime h</li>
                    <li class="list-group-item">Start time: @Model.StartTime</li>
                    <li class="list-group-item">Race name: @Model.RaceName</li>
                </ul>
            </div>
        </div>


    </div>

    <div class="row">
        <div class="col-md-3">

            <div class="position-absolute start-30">
            </div>
        </div>
</article>